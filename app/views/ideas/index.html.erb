<h1><em>Shannon's Ideas</h1>

<table>
  <tr>
    <th>Picture</th>
    <th>Name</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ideas.each do |idea| %>
  <tr>
    <td><%= image_tag(idea.picture_url, :width => 125) %></td>
    <td><%= idea.name %></td>
    <td><%= idea.description %></td>
    <td><%= link_to 'Show', idea, class: 'btn btn-success' %></td>
    <td><%= link_to 'Edit', edit_idea_path(idea), class: 'btn btn-info' %></td>
    <td><%= link_to 'Destroy', idea, class: 'btn btn-danger',confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Idea', new_idea_path %>
